public class StringManipulator {
    
    public Sting makeUserName(String fullName){
        String rName = fullName.toLowerCase();
        rName = rName.charAt(0).toString() + 
            rName.subString( (rName.indexOf(' ')+1),rName.length -1);
        return rName;
    }
    
}
